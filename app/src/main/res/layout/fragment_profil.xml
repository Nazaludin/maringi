<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.profil.ProfilFragment">


        <ImageView
            android:id="@+id/imageView_akun"
            android:layout_width="456dp"
            android:layout_height="208dp"
            android:padding="@null"
            android:src="@drawable/top_main_menu_bg"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.513"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textView_akun"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:fontFamily="@font/montserrat_bold"
            android:text="Akun"
            android:textColor="@color/white"
            android:textSize="20dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/imageView_bg_detail_akun"
            android:layout_width="361dp"
            android:layout_height="138dp"
            android:layout_marginTop="76dp"
            android:src="@drawable/detail_profil_bg"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView_akun">

        </ImageView>


        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/ShapeableImageView_profil_akun"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/photo_profil_image"
            app:layout_constraintBottom_toBottomOf="@+id/imageView_bg_detail_akun"
            app:layout_constraintEnd_toEndOf="@+id/imageView_bg_detail_akun"
            app:layout_constraintHorizontal_bias="0.157"
            app:layout_constraintStart_toStartOf="@+id/imageView_bg_detail_akun"
            app:layout_constraintTop_toTopOf="@+id/imageView_bg_detail_akun"
            app:layout_constraintVertical_bias="0.378"
            app:shapeAppearanceOverlay="@style/roundedImageViewProfil"
            app:strokeColor="@color/white"
            app:strokeWidth="3dp" />

        <LinearLayout
            android:layout_width="209dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="@+id/imageView_bg_detail_akun"
            app:layout_constraintEnd_toEndOf="@+id/imageView_bg_detail_akun"
            app:layout_constraintStart_toEndOf="@+id/ShapeableImageView_profil_akun"
            app:layout_constraintTop_toTopOf="@+id/imageView_bg_detail_akun"
            app:layout_constraintVertical_bias="0.378">

                <TextView
                    android:id="@+id/TextView_nama_akun_detail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/montserrat_bold"
                    android:paddingVertical="2dp"
                    android:text="Nama"
                    android:textColor="@color/dark"
                    android:textSize="14dp" />

                <TextView
                    android:id="@+id/TextView_nomor_akun_detail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/montserrat_reguler"
                    android:paddingVertical="2dp"
                    android:text="Nomor"
                    android:textColor="@color/dark"
                    android:textSize="14dp"
                    tools:layout_editor_absoluteX="163dp"
                    tools:layout_editor_absoluteY="172dp" />
                <TextView
                    android:id="@+id/TextView_email_akun_detail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/montserrat_reguler"
                    android:paddingVertical="2dp"
                    android:text="Email"
                    android:textColor="@color/dark"
                    android:textSize="14dp" />
        </LinearLayout>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"

            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.458"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageView_bg_detail_akun">

                <Button
                    android:id="@+id/button_riwayat_donasi_akun"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="40dp"
                    android:text="Riwayat Donasi"
                    android:fontFamily="@font/montserrat_semi_bold"
                    android:textSize="14dp"
                    android:textAlignment="textStart"
                    android:textAllCaps="false"
                    android:textColor="@color/dark"
                    android:paddingLeft="30dp"
                    android:paddingVertical="12dp"
                    android:drawableRight="@drawable/ic_next_24dp"
                    android:backgroundTint="@color/white"
                    android:background="@drawable/bottom_line" />

                <Button
                    android:id="@+id/button_pengaturan_akun"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bottom_line"
                    android:backgroundTint="@color/white"
                    android:drawableRight="@drawable/ic_next_24dp"
                    android:fontFamily="@font/montserrat_semi_bold"
                    android:paddingVertical="12dp"
                    android:paddingLeft="30dp"
                    android:text="Pengaturan"
                    android:textAlignment="textStart"
                    android:textAllCaps="false"
                    android:textColor="@color/dark"
                    android:textSize="14dp" />

                <Button
                    android:id="@+id/button_keluar_akun"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Keluar"
                    android:fontFamily="@font/montserrat_semi_bold"
                    android:textSize="14dp"
                    android:textAlignment="textStart"
                    android:textAllCaps="false"
                    android:textColor="@color/dark"
                    android:paddingLeft="30dp"
                    android:paddingVertical="12dp"
                    android:drawableRight="@drawable/ic_next_24dp"
                    android:backgroundTint="@color/white"
                    android:background="@drawable/bottom_line" />
        </LinearLayout>




</androidx.constraintlayout.widget.ConstraintLayout>