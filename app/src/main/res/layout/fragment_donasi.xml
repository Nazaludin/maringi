<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.donasi.DonasiFragment">

    <TextView
        android:id="@+id/text_donasi"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="38dp" />

    <TextView
        android:id="@+id/textVIew_donasi_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:fontFamily="@font/montserrat_bold"
        android:textColor="@color/dark"
        android:layout_marginTop="28dp"
        android:text="Ingin donasi apa hari ini?"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView_donasi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="36dp"
        android:src="@drawable/donasi_menu_image"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textVIew_donasi_message" />

    <Button
        android:id="@+id/button_donasi_makanan"
        android:layout_width="200dp"
        android:layout_height="wrap_content"

        android:layout_marginTop="52dp"
        android:backgroundTint="@color/primary_blue"
        android:text="Donasi Makanan"
        android:textAllCaps="false"
        app:cornerRadius="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView_donasi" />

    <Button
        android:id="@+id/button_donasi_uang"
        android:layout_width="200dp"
        android:layout_height="wrap_content"

        android:backgroundTint="@color/primary_blue"
        android:text="Donasi Uang"
        android:textAllCaps="false"
        app:cornerRadius="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button_donasi_makanan" />


</androidx.constraintlayout.widget.ConstraintLayout>